{
    "compilerOptions": {
        "rootDir": "src/",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "lib": ["ES2021.String", "ES7"],
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/*", "src/types/*"]
    },
    "include": ["src/**/*", ".env"]
}
